@model Wedding


<h1>Add a Post</h1>
<form asp-action="UpdateWedding" asp-route-weddingId="@Model.WeddingId" asp-controller="Wedding" method="Post" class="shadow p-3 rounded">
    <div class="mb-3">
            <label asp-for="WedderOne"></label>
            <input asp-for="WedderOne" type="text" name="WedderOne" value="@Model.WedderOne">

            <br>

            <label asp-for="WedderTwo"></label>
            <input asp-for="WedderTwo" type="text" name="WedderTwo" value="@Model.WedderTwo">

            <br>

            <label asp-for="Date"></label>
            <input asp-for="Date" type="date" name="Date" value="@Model.Date">

            <br>

            <label asp-for="Address"></label>
            <input asp-for="Address" type="text" name="Address" value="@Model.Address">

            <button type="submit" value="Submit">Union of the Realm Contract!</button>
    </div>
</form>
